{
  "name": "onmypc-legal-ai",
  "version": "1.0.0",
  "description": "Complete local Legal AI assistant",
  "main": "electron/main.js",
  "private": true,
  "author": "OnMyPC AI",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.11",
    "wait-on": "^9.0.1"
  },
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "build:vite": "vite build",
    "build:electron": "electron-builder --win portable",
    "build": "npm run build:vite && npm run build:electron",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.onmypc.legalai",
    "productName": "OnMyPC Legal AI",
    "directories": {
      "output": "dist",
      "buildResources": "electron/resources"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "backend/**/*",
      "requirements.txt"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../portable/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../frontend/build",
        "to": "web",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
